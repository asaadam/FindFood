<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asaadam.findfood.Menu_Page_1">

<ImageView
    android:id="@+id/imageMakanan1"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:scaleType="fitXY"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:background="@color/Primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvJudul"
                android:layout_centerVertical="true"
                android:text="test"
                android:textSize="20dp"
                android:textAllCaps="true"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_favorite_black_48dp"
                android:id="@+id/like"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/username"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bahan"
        android:textSize="15dp"
        android:fontFamily="@font/roboto_mono_bold"
        />

<android.support.v7.widget.RecyclerView
    android:paddingLeft="16dp"
    android:id="@+id/rv1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</android.support.v7.widget.RecyclerView>

<Button
    android:id="@+id/startStep"
    android:text="MULAI MEMASAK"
    android:background="@drawable/capsuleshapebutton"
    android:backgroundTint="@color/Primary"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:layout_gravity="center_horizontal"/>

<TextView
    android:paddingLeft="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ulasan"/>

<android.support.v7.widget.RecyclerView
    android:paddingLeft="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</android.support.v7.widget.RecyclerView>


</LinearLayout>


</ScrollView>