<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.asaadam.findfood.login_activity"
android:background="@color/Primary">


<RelativeLayout
    android:id="@+id/Header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:padding="20dp"
    >

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_restaurant_black_48dp"
        />

    <TextView
        android:id="@+id/food"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/roboto_mono_bold"
        android:gravity="center"
        android:maxLines="1"
        android:text="Recipes Finder"
        android:textColor="#000000"
        android:textSize="80sp" />
</RelativeLayout>

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <AutoCompleteTextView
        android:background="@drawable/roundedcorner"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:id="@+id/userLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:maxLines="1"
        android:textColor="#000"
        android:singleLine="true"
        android:textColorHint="#000"/>
    <EditText
        android:padding="10dp"
        android:textColor="#000"
        android:id="@+id/passwordLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/roundedcorner"
        android:hint="Password"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="10"
        android:singleLine="true"
        android:textColorHint="#000"
        android:textSize="20sp"/>
<Button
    android:onClick="startSignin"
    android:layout_gravity="center"
    android:id="@+id/singIn"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/capsuleshapebutton"
    android:text="@string/title_activity_login"
    android:textStyle="bold"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUP"
        android:text="Not Registered yet? Sign up here"
        android:textAlignment="center"/>
</LinearLayout>
