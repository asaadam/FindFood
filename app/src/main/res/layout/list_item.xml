<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:background="@drawable/cardviewstyle"
    android:padding="10dp"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/imageMakanan"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:src="@mipmap/imagetest" />
        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nasi Goreng "/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="top"
            android:text="asdasdasdasdasdasdasdasd"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/timer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_restaurant_black_48dp" />

        <TextView
            android:id="@id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/timer"
            android:gravity="bottom"
            android:text="30M" />
    </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>